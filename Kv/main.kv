<registro>:
    mes:mes
    nombre:nombre
    dia:dia
    year:year
    altura:altura
    sexo:sexo
    peso:peso
	canvas:
		Rectangle:
			pos:self.pos
			size: self.size
			source: "img/fondo.jpg"
    Label:
        text:"Name :"
        font_size:30
        size_hint:None,None
        pos:50,480
    TextInput:
        id:nombre
        size_hint:None,None
        multiline:False
        font_size:20
        pos:150,510
        size:560,35
        valign: "middle"
        halign: "center"
        focus: True
    Label:
        text:"Date of birth :"
        font_size:30
        size_hint:None, None
        pos:489,419
    TextInput:
        id:mes
        hint_text: 'MM'
        input_filter:"int"
        multiline: False
        font_size:30
        valign: "middle"
        halign: "center"
        size_hint:None,None
        pos:435,399
        size:60,50
    TextInput:
        id:dia
        hint_text: 'DD'
        input_filter:"int"
