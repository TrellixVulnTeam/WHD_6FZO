			size: self.size
			source: "img/fondo.jpg"
    Button:
        id:inicio
        on_press:root.ir()
        text:"Sing up"
        background_color:.49,1.56,.01,1
        size_hint: None, None
        pos: 270,430
        size:200,100
    
    Button:
        id:Info
        on_press:root.info()
